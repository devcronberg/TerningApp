@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@if (nyheder != null) {
<ul>
    @foreach (var item in nyheder)
    {
        <li>@item.Titel</li>
    }
</ul>
}


@code {

    List<DRNyheder.Kerne.DRNyhed> nyheder;

    private int currentCount = 0;

    private void IncrementCount()
    {
        nyheder = DRNyheder.Kerne.DRNyhed.Hent("https://www.dr.dk/nyheder/service/feeds/allenyheder/");
        
    }
}
